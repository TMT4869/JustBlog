@model FA.JustBlog.Core.Models.ViewModels.CategoryVM

@{
    ViewBag.Title = $"Edit {Model.Name}";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Category</h1>
        <hr />
        <div class="row">
            <div class="col-md-10">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UrlSlug" class="control-label"></label>
                        <input asp-for="UrlSlug" class="form-control" />
                        <span asp-validation-for="UrlSlug" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="row mt-2">
                        <div class="form-group col-6 col-md-3 d-grid gap-2">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                        <div class="col-6 col-md-3 d-grid gap-2">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{
        <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
    }
}